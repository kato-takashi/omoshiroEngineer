                <!--android:paddingLeft="10dip"-->
                <!--android:paddingRight="2dip"-->
                <!--android:paddingTop="2dip"-->
                <!--android:scrollHorizontally="true"-->
                <!--android:singleLine="true"-->
                <!--android:textSize="16dp" />-->
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>
</LinearLayout>